{
  "name": "@todo/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    },
    "./schema/*": {
      "default": "./src/schema/*.ts"
    },
    "./queries": {
      "default": "./src/queries/index.ts"
    },
    "./queries/*": {
      "default": "./src/queries/*.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "check-types": "tsgo --noEmit"
  },
  "dependencies": {
    "@effect/experimental": "catalog:",
    "@effect/sql": "catalog:",
    "@effect/sql-d1": "catalog:",
    "@effect/sql-drizzle": "catalog:",
    "@libsql/client": "catalog:",
    "@todo/env": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "effect": "catalog:",
    "libsql": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@todo/config": "workspace:*",
    "@typescript/native-preview": "catalog:",
    "drizzle-kit": "^0.31.8",
    "typescript": "catalog:"
  }
}
