{
  "name": "todo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@cloudflare/workers-types": "^4.20251213.0",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "alchemy": "^0.82.1",
      "@orpc/client": "^1.12.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter @todo/db db:push",
    "db:generate": "bun run --filter @todo/db db:generate",
    "deploy": "bun run --filter @todo/infra deploy",
    "destroy": "bun run --filter @todo/infra destroy"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@todo/env": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/node": "catalog:",
    "@todo/config": "workspace:*",
    "@cloudflare/workers-types": "catalog:"
  }
}
