{
  "name": "todo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tests/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@cloudflare/workers-types": "^4.20251213.0",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "alchemy": "^0.82.1",
      "@orpc/client": "^1.12.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@typescript/native-preview": "^7.0.0-dev.20260101.1",
      "effect": "^3.19.14",
      "@effect/experimental": "^0.58.0",
      "@effect/sql": "^0.49.0",
      "@effect/sql-d1": "^0.47.0",
      "@effect/sql-drizzle": "^0.48.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check": "bun ultracite check --type-aware",
    "check-types": "bun run --filter '*' check-types",
    "fix": "bun ultracite fix --type-aware",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter @todo/db db:push",
    "db:generate": "bun run --filter @todo/db db:generate",
    "deploy": "bun run --filter @todo/infra deploy",
    "destroy": "bun run --filter @todo/infra destroy",
    "prepare": "lefthook install",
    "storybook": "bun run --filter web storybook",
    "test:unit": "bun run --filter '*' test:unit",
    "test:e2e": "bun run --filter @todo/e2e test"
  },
  "dependencies": {
    "@todo/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@testing-library/jest-dom": "^6.9.1",
    "@todo/config": "workspace:*",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "lefthook": "^2.0.13",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "oxlint-tsgolint": "^0.10.1",
    "typescript": "catalog:",
    "ultracite": "7.0.5",
    "web": "workspace:*"
  },
  "packageManager": "bun@1.3.5"
}
